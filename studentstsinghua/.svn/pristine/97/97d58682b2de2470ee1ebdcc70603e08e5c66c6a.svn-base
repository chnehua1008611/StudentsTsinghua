package com.qq.weixin.sdk;

public class MessageBuilder {

	public String buildXmlElement(String tag, String content, boolean isCdata) {
		StringBuffer buffer = new StringBuffer();
		buffer.append("<" + tag + ">");
		if (isCdata) {
			buffer.append("<![CDATA[");
		}
		buffer.append(content);
		if (isCdata) {
			buffer.append("]]>");
		}
		buffer.append("</" + tag + ">");
		return buffer.toString();
	}

}
