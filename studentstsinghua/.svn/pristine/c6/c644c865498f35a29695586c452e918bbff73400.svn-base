package com.qq.weixin.sdk.messageHadler;

import org.w3c.dom.Element;

import com.qq.weixin.sdk.message.Message;
import com.qq.weixin.sdk.message.MessageResultText;
import com.qq.weixin.sdk.message.MessageText;

/**
 * handle text message
 * 
 * @author hujiawei
 * 
 */
public class MessageHandlerText extends MessageHandlerHelper {

	private MessageText messageText;

	@Override
	public Message handleMessage(Message message) {
		messageText = (MessageText) message;
		String content = messageText.getContent();
		// Message messageResult = null;
		// if (content.indexOf("使用")>0) {
		// return buildDefaultMessageResultText();
		// }
		MessageResultText messageResult = new MessageResultText();
		messageResult.setMsgType(MESSAGE_RESULT_TEXT);
		messageResult.setContent(content);
		messageResult.setFromUserName(messageText.getToUserName());
		messageResult.setToUserName(messageText.getFromUserName());
		messageResult.setFuncFlag(1);//
		messageResult.setCreateTime(getCurrentUnixTimestamp());

		return messageResult;
	}

	// build default result message
	private Message buildDefaultMessageResultText() {
		MessageResultText messageResultText = new MessageResultText();
		messageResultText.setMsgType(MESSAGE_RESULT_TEXT);
		messageResultText.setContent("欢迎关注学生在清华，有了它你可以及时查看清华大学文艺演出、电影讲座等信息，丰富多彩的校园生活从此开始！");
		messageResultText.setFromUserName(messageText.getToUserName());
		messageResultText.setToUserName(messageText.getFromUserName());
		messageResultText.setFuncFlag(1);//
		messageResultText.setCreateTime(getCurrentUnixTimestamp());
		return messageResultText;
	}

	@Override
	protected void parseSpecialMessage(Message message, Element root) {
		MessageText messageText = (MessageText) message;
		messageText.setContent(root.getElementsByTagName(TAG_CONTENT).item(0).getTextContent());
	}

}
